                        <div class="col-lg-3 col-lg-offset-5">
                            <br />
                            <div>@product.ProductName</div>
                            <br />
                            <div>ID: @product.Id</div>
                            <br />
                            <div>Stock: @product.Stock left!</div>
                            <br />
                            <div>Category: @product.Category</div>
                            <br />
                            <div>@product.ShortDescription</div>
                        </div>
                    </div>
                    <h3>
