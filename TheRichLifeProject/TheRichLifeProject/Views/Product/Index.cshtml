    foreach (var product in Model)
    {
        <div class="row col-lg-offset-3">
            <div class="row">
                <div class="thumbnail">
                    <a asp-controller="Product" asp-action="Detail" asp-route-id="@product.Id">
                        <img src="@product.ImageSrc" alt="" />
                    </a>
                    <div class="caption">
                        <h3 class="pull-right">@product.Price.ToString("c")</h3>
                        <div class="col-lg-1">
                            <h3>
