
<h2>User Orders</h2>

@{
    foreach (var item in Model)
    {
        <h3>Order Id: @item.Id, Order Price: @decimal.Round(item.OrderPrice, 2)</h3>
        foreach (var item2 in item.OrderDetails)
        {
            <h4>Product: @item2.Product.ProductName</h4>
            <h4>Item Quantity: @item2.Quantity</h4>
            <h4>Item Subtotal: @decimal.Round(item2.SubTotal, 2)</h4>
            <h4>Status: @item2.Status</h4>
            <hr />
        }
    }

}
<div>
    <a class="btn btn-default" href='javascript:history.go(-1)'>Back</a>
</div>
